<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_main_tb_main"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:alpha="0.8"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_margin="4dp"
        android:background="@drawable/filter_back"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/toolbar_filter_ll_sort"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"

            >


            <TextView
                android:id="@+id/toolbar_filter_tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="مرتب سازی"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/sort"
                android:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/toolbar_filter_ll_filter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/categories"
                android:layout_marginRight="6dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_filter_tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="دسته بندی"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
