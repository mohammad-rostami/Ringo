<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/row_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#e9e8e8"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:src="@mipmap/music"
                android:tint="#777777" />

            <ImageView
                android:id="@+id/lock"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#e04d4c4c"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:src="@mipmap/lock"
                android:tint="#ff5722"
                 />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="#999999"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:singleLine="true"
                android:textColor="#212121"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/row_artist"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/row_album"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="#33B5E5"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/VerticalDividerForList"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/row_options_download"
            android:layout_width="40dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/button_options"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@mipmap/download"
            android:tag="disable"
            android:tint="#999999"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/row_options_button"
            android:layout_width="40dip"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/button_options"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:src="@mipmap/play"
            android:tag="disable"
            android:tint="#999999"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e8e8"></LinearLayout>
</LinearLayout>
