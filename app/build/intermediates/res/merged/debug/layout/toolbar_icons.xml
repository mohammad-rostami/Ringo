<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_icon_tb_main"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:animateLayoutChanges="true"
    android:background="@color/gray_nav"
    >

    <LinearLayout
        android:id="@+id/toolbar_icons_back_changer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular"
        android:orientation="horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/toolbar_icons_ll_downloads"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:alpha="0.6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_icons_img_downloads"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/download1"
                android:text="btn"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_icons_txt_downloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="دانلودشده ها"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_icons_ll_bank"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toolbar_icons_img_bank"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/ringo_bank"
                android:text="btn"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_icons_txt_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="بانک رینگو"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_icons_ll_cut"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.25"
            android:alpha="0.6"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/toolbar_icons_img_cut"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/cut"
                android:text="btn"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_icons_txt_cut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="برش موسیقی"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toolbar_icons_ll_archive"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:alpha="0.6"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/toolbar_icons_img_archive"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:src="@drawable/archive"
                android:text="btn"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_icons_txt_archive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="آرشیو"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
